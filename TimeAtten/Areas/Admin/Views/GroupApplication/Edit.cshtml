@model TimeAtten.Models.User_Application
@{
    ViewBag.Title = "Edit Application";
    TimeAtten.Services.Utilities.BreadCrumbList breadcrumbs = ViewBag.BreadCrums;
    string err = "";
    try
    {
        if(TempData["ErrorMessage"].ToString()!=""){err = "Caution ! " + TempData["ErrorMessage"].ToString();}
    }
    catch (Exception ert) { }
}
@Html.Partial("_header")
<!--close-Header-part-->
<!-- BEGIN CONTAINER -->
<div class="page-container row-fluid">
    @Html.Partial("_left", "OwnerCreate")
    <!-- BEGIN PAGE -->
    <div class="page-content">

        <!-- BEGIN PAGE CONTAINER-->
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
            @{Html.RenderPartial("_breadcrumb", breadcrumbs);}
            <!-- END PAGE HEADER-->
            <!-- Form -->
            <div class="portlet box green">
                <div class="portlet-title">
                    <h4><i class="icon-reorder"></i>Application Edit</h4>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>
                <div id="err" style="color: #F80606;">
                    @err
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    @using (Html.BeginForm(new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
@*<form action="#" class="form-horizontal">*@
                        <h3 class="form-section">Application Edit</h3>
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label">Application Code</label>
                                    <div class="controls">
                                        <span class="text">@Model.ApplicationId</span>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="span6 ">
                                <div class="control-group">
                                </div>
                            </div>
                            <!--/span-->
                        </div>  
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label">Application Name</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.ApplicationName, new { @class = "m-wrap span12" })
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label">Application Description</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => model.Description, new { @class = "m-wrap span12" })
                                        <span class="help-block">@Html.ValidationMessageFor(model => model.Description)</span>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>                        
                        <div class="form-actions">
                            <button type="submit" value="Save" class="btn blue"><i class="icon-ok"></i>Edit</button>
                            @Html.ActionLink("Cancel", "Index", "GroupApplication", new { @class = "btn" })
                        </div>@*</form>*@
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.HiddenFor(model => model.EditedBy)
                        @Html.HiddenFor(model => model.EditedDate)
                        @Html.HiddenFor(model => model.IsActive)
                        @Html.HiddenFor(model => model.ApplicationId)
                    }
                    <!-- END FORM-->
                </div>
                <!-- end form -->
            </div>
        </div>
        <!-- END PAGE -->
    </div>
    <!-- END CONTAINER -->
</div>
@Html.Partial("_footer")
<script>
    jQuery(document).ready(function () {
        // initiate layout and plugins
        App.init();
    });
</script>
<script>
    jQuery(document).ready(function () {
        // initiate layout and plugins
        App.setPage("table_editable");
        App.init();
    });
</script>
<script>
    jQuery(document).ready(function () {

        // to fix chosen dropdown width in inactive hidden tab content
        $('.advance_form_with_chosen_element').on('shown', function (e) {
            App.initChosenSelect('.chosen_category:visible');
        });

        // initiate layout and plugins
        App.init();
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}



