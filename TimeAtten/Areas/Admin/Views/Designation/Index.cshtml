@{
    ViewBag.Title = "Index";
    TimeAtten.Services.Utilities.BreadCrumbList breadcrumbs = ViewBag.BreadCrums;
    string err = "";
    try
    {
        if(TempData["ErrorMessage"].ToString()!=""){err = "Caution ! " + TempData["ErrorMessage"].ToString();}
    }
    catch (Exception ert) { }
 }
@Html.Partial("_header")
<!--close-Header-part-->
<!-- BEGIN CONTAINER -->
<div class="page-container row-fluid">
    @Html.Partial("_left","OwnerCreate")
    <!-- BEGIN PAGE -->
    <div class="page-content">

        <!-- BEGIN PAGE CONTAINER-->
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
               @{Html.RenderPartial("_breadcrumb", breadcrumbs);}
            <!-- END PAGE HEADER-->
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet box blue">
                <div class="portlet-title">
                    <h4><i class="icon-edit"></i>Designations </h4>
                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>
                <div id="err" style="color:#F80606;">
                    @err
                </div>
                <div class="portlet-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <span class="btn green">
                                
                                @Html.ActionLink("Add New Designation", "Create")
                                <i class="icon-plus"></i>
                            </span>
                        </div>
                        <div class="btn-group pull-right">
                            <button class="btn dropdown-toggle" data-toggle="dropdown">
                                Tools <i class="icon-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Print</a></li>
                                <li><a href="#">Save as PDF</a></li>
                                <li><a href="#">Export to Excel</a></li>
                            </ul>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered" id="Owner_table_1">
                        <thead>
                            <tr>
                                <th>
                                   Designation Code
                                </th>
                                 
                                <th>
                                   Designation Name
                                </th>  
                                
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                <tr class="">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Desigs_Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>  
                                    
                                    
                                    <td class="edit">
                                        @Html.ActionLink("Edit", "Edit", new { id=item.Desigs_Code  }) |
                                        @*@Html.ActionLink("Details", "Details", new {id=item.Desigs_Code   }) |*@
                                        @Html.ActionLink("Delete", "Delete", new { id=item.Desigs_Code   })
                                    </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->        
        </div>
    </div>
    <!-- END PAGE -->
</div>
<!-- END CONTAINER -->
@Html.Partial("_footer")
	
